# 服务器配置
PORT=5000
HOST=localhost
NODE_ENV=development
TRUST_PROXY=true
BODY_LIMIT=200mb

# 数据库配置
MONGODB_URI=mongodb://localhost:27017/midjourney-gallery
DB_MAX_POOL_SIZE=10
DB_TIMEOUT=5000
DB_SOCKET_TIMEOUT=45000

# JWT配置
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random-64-chars-minimum
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d
JWT_ALGORITHM=HS256

# 客户端URL（多个URL用逗号分隔）
CLIENT_URL=http://localhost:3000

# 限流配置
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# 文件上传配置
MAX_FILE_SIZE=10485760
MAX_FILES=9
UPLOAD_PATH=./server/uploads
ALLOWED_IMAGE_TYPES=image/jpeg,image/jpg,image/png,image/gif,image/webp
ALLOWED_VIDEO_TYPES=video/mp4,video/mov,video/avi,video/mkv
THUMBNAIL_WIDTH=300
THUMBNAIL_HEIGHT=300

# 邮件配置（可选）
EMAIL_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM_NAME=MJ Gallery
EMAIL_FROM_ADDRESS=
EMAIL_TEMPLATE_WELCOME=welcome
EMAIL_TEMPLATE_RESET=reset-password

# 管理员账户（首次启动时创建）
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123456
ADMIN_AUTO_CREATE=true

# 缓存配置
CACHE_ENABLED=true
CACHE_TTL=300
REDIS_ENABLED=false
REDIS_URL=redis://localhost:6379
REDIS_KEY_PREFIX=mj-gallery:

# 日志配置
LOG_LEVEL=info
LOG_FORMAT=combined
LOG_FILE_ENABLED=false
LOG_FILE_PATH=./logs
LOG_FILE_MAX_SIZE=10m
LOG_FILE_MAX_FILES=5

# 安全配置
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=
SESSION_MAX_AGE=86400000

# 分页配置
PAGINATION_DEFAULT_LIMIT=12
PAGINATION_MAX_LIMIT=100

# 第三方服务配置
ANALYTICS_ENABLED=false
GOOGLE_ANALYTICS_ID=
SENTRY_ENABLED=false
SENTRY_DSN=
CLOUDINARY_ENABLED=false
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=