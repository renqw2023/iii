{
  "name": "iii-pics-server",
  "version": "1.0.0",
  "description": "III.PICS 服务器端应用",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon index.js",
    "start": "node index.js",
    "create-admin": "node scripts/createAdmin.js",
    "init-uploads": "node scripts/initUploads.js",
    "seed": "node scripts/seedData.js",
    "create-sample": "node scripts/createSampleData.js",
    "test-db": "node scripts/testConnection.js",
    "generate-config": "node scripts/generateConfig.js",
    "validate-config": "node scripts/validateConfig.js",
    "setup": "npm install && node scripts/initUploads.js && node scripts/createAdmin.js",
